# ============================================
# [PROJECT_NAME] - Variables de Entorno DESARROLLO
# ============================================
# Copia a .env.dev: cp .env.dev.example .env.dev
# Uso: docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env.dev up -d

# ---- Proyecto ----
COMPOSE_PROJECT_NAME=myproject
ENVIRONMENT=development
DEBUG=true

# ---- Base de datos ----
DB_USER=myproject
DB_PASSWORD=dev_password_change_me
DB_NAME=myproject
DB_PORT=5432

# ---- Redis ----
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# ---- Seguridad ----
SECRET_KEY=dev_secret_key_minimum_32_characters_here

# ---- PgAdmin (solo dev) ----
PGADMIN_EMAIL=admin@myproject.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ---- Puertos (solo dev) ----
API_PORT=8000
ADMIN_PORT=3001

# ---- API Keys (rellenar con tus claves) ----
# ANTHROPIC_API_KEY=sk-ant-xxx
# OPENAI_API_KEY=sk-xxx

# ---- Debug ----
# DEBUG_API_TOKEN=          # Token para proteger endpoints de debug en prod
